            <ToggleButton x:Name="PlayPauseButton_Mimic" Style="{StaticResource Button_Command2}" Content="Play/Pause" VerticalAlignment="Center" HorizontalAlignment="Left" Click="PlayPauseButton_Click" Height="64" Width="148" FontSize="16" Margin="10,0,0,0" Background="#FF3D3D3D" Foreground="#FFDDDDDD"/>
