        <Grid HorizontalAlignment="Center" Width="1540" Height="200" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1">
            <ScrollViewer Name="logging_box_scroller">
                <TextBlock x:Name="logging_box" Margin="0,-14,-2,-1" Text="" TextWrapping="Wrap" FontFamily="Consolas" Foreground="White" Background="{x:Null}" FontSize="10" IsEnabled="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="1" Margin="14,10,10,10">

            <!--
            <ToggleButton x:Name="PlayPauseButton" Style="{StaticResource ButtonStyle}" Content="Play/Pause" VerticalAlignment="Center" HorizontalAlignment="Left" Click="PlayPauseButton_Click" Height="64" Width="148" FontSize="16" Margin="10,0,0,0"/>
            <ToggleButton x:Name="StopButton" Style="{StaticResource ButtonStyle}" Content="Stop" VerticalAlignment="Center" HorizontalAlignment="Left" Click="StopButton_Click" Height="64" Width="148" FontSize="16" Margin="178,0,0,0"/>
            -->
            <ToggleButton x:Name="PlayPauseButton_Mimic" Style="{StaticResource Button_Command2}" Content="Play/Pause" VerticalAlignment="Top" HorizontalAlignment="Left" Click="PlayPauseButton_Click" Height="45" Width="90" FontSize="16" Margin="10,65,0,0" Background="#FF3D3D3D" Foreground="#FFDDDDDD" MouseDown="AnyButton_MouseDown" MouseUp="AnyButton_MouseDown"/>
            <ToggleButton x:Name="StopButton_Mimic" Style="{StaticResource Button_Command2}" Content="Stop" VerticalAlignment="Top" HorizontalAlignment="Left" Click="StopButton_Click" Height="45" Width="90" FontSize="16" Margin="10,115,0,0" Background="#FF3D3D3D" Foreground="#FFDDDDDD" MouseDown="AnyButton_MouseDown" MouseUp="AnyButton_MouseUp"/>

            <Slider x:Name="sldrPlaybackProgress" Minimum="0" Maximum="1" ValueChanged="sldrPlaybackProgressChanged"  HorizontalAlignment="Center" Margin="0,56,0,0" Grid.Row="1" VerticalAlignment="Top" Width="316" Foreground="#FFDDDDDD" Height="18" Visibility="Hidden"/>
            <Slider x:Name="VolSlider" Minimum="0" Maximum="1" ValueChanged="VolSliderUpdated"  HorizontalAlignment="Center" Margin="0,196,0,0" VerticalAlignment="Top" Width="316" Foreground="#FFDDDDDD" Height="18" TickPlacement="None" Cursor="Hand"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="Wrap" Text="Volume" VerticalAlignment="Top" Foreground="#FFDDDDDD" FontSize="16" RenderTransformOrigin="0.017,0.909" Height="21" Width="56"/>
            <ToggleButton x:Name="ExportSelectedButton" Style="{StaticResource Button_Command2}" Content="Export Selected" VerticalAlignment="Top" HorizontalAlignment="Center" Click="Export_Clicked" Height="45" Width="116" FontSize="16" Margin="0,65,0,0" Background="#FF3D3D3D" Foreground="#FFDDDDDD" MouseDown="AnyButton_MouseDown" MouseUp="AnyButton_MouseUp"/>
