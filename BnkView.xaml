            <Button x:Name="ClearSearchButton" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="45" Width="90" Click="ClearSearchButton_Click" Opacity="0"/>
            <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Search for GinsorID" VerticalAlignment="Top" Width="90" Height="45" TextAlignment="Center" Background="{x:Null}" Foreground="#FFDDDDDD" KeyDown="SearchBox_KeyDown"/>

        </Grid>
